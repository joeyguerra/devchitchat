{
  "name": "devchitchat",
  "version": "1.0.0",
  "description": "10 AM daily chit-chat for devs",
  "main": "src/index.mjs",
  "scripts": {
    "start": "node --env-file-if-exists=.env ./node_modules/hubot/bin/Hubot.mjs -a @hubot-friends/hubot-chat",
    "test": "node --test tests/**/*.test.mjs",
    "dev": "node --env-file-if-exists=.env --watch ./node_modules/hubot/bin/Hubot.mjs -a @hubot-friends/hubot-chat",
    "docker-build": "./docker-build-k3d.sh",
    "local-deploy": "kubectl config use-context ${KUBE_CONTEXT:-k3d-local} && kubectl apply -f charts/web/deployment.yaml -n ${KUBE_NAMESPACE:-default}",
    "push": "node --run docker-build && node --run local-deploy"
  },
  "keywords": [
    "devchitchat",
    "hubot",
    "chatbot",
    "robot"
  ],
  "author": "Joey Guerra <github@joeyguerra.com>",
  "license": "MIT",
  "type": "module",
  "dependencies": {
    "@hubot-friends/hubot-chat": "^1.1.3",
    "cookie-parser": "^1.4.7",
    "hubot": "^14.0.1",
    "hubot-diagnostics": "^2.1.3",
    "hubot-help": "^2.1.5",
    "hubot-rules": "^2.1.1"
  }
}
